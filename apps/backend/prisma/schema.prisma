// learn more about it in the docs https//pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id              String   @id @default(uuid())
  alias           String
  password        String
  name            String
  date            DateTime
  location        String
  description     String
  image           String
  backgroundImage String
  limitGuests     Int
  guests          Guest[]

  @@map("events")
}

model Guest {
  id              String  @id @default(uuid())
  name            String
  email           String
  confirmed       Boolean
  hasCompany      Boolean
  quantityCompany Int
  Event           Event?  @relation(fields: [eventId], references: [id])
  eventId         String?

  @@map("guests")
}
